namespace gap {
    
constexpr int VERSION_MAJOR = GAP_VERSION_MAJOR;
constexpr int VERSION_MINOR = GAP_VERSION_MINOR;
constexpr int VERSION_PATCH = GAP_VERSION_PATCH;
constexpr char const* VERSION_STRING = GAP_VERSION_STRING;

constexpr bool CUDA_ENABLED = 
#if GAP_CUDA_ENABLED
    true;
#else
    false;
#endif

constexpr char const* BUILD_TYPE = 
#ifdef GAP_BUILD_TYPE
    GAP_BUILD_TYPE;
#else
    "Unknown";
#endif

} // namespace gap